generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql" // O el proveedor que est√©s utilizando
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  nit       Int      @unique 
  email     String   @unique
  password  String
  name      String?
  walletHash String  @unique  // Campo para almacenar el hash de la wallet
  role      Role     @default(USER) // Campo para manejar roles
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  USER
  ADMIN
}